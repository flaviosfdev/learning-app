<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearningApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textAppearance">@style/LearningAppTheme.Font</item>
    </style>

    <style name="LearningAppTheme"/>

    <style name="LearningAppTheme.Font">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LearningAppTheme.Font.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LearningAppTheme.Font.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LearningAppTheme.Font.Title.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LearningAppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryGreen</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primaryGreen</item>
        <item name="textAllCaps">false</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Rounded</item>
    </style>

    <style name="LearningAppTheme.Button.Large">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="LearningAppTheme.Button.Medium">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>